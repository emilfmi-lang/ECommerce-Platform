@model ProductFilterVm
    
@{
    ViewData["Title"] = "Products";
}
<!-- Məhsul 1 -->

@foreach(var product in Model.Products)
{

    <div class="product-card" data-category="telefon" data-price="2499">
        <img src="~/assests/img/@product.ImageUrl" alt="iPhone 15 Pro" class="product-image">
        <div class="product-info">
            <div class="product-category">@product.Category.Name</div>
            <h3 class="product-name">@product.Name</h3>
            <p class="product-description">@product.Title</p>
            <div class="product-footer">
                <span class="product-price">@product.Price ₼</span>
                <button class="add-to-cart-btn" onclick="addToCart(1)">
                    @product.ButtonText
                </button>
            </div>
        </div>
    </div>
}

