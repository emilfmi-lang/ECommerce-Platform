@model ProductFilterVm
@{
    ViewData["Title"] = "Məhsullar";
}
<!-- Filters -->
<section class="filters" id="products">
    <div class="container">
        <div class="filter-bar">
            <div class="filter-group">
                <label>Kateqoriya:</label>
                <select id="categoryFilter">
                    <option value="all">Hamısı</option>
                    <option value="telefon">Telefonlar</option>
                    <option value="notebook">Notebooklar</option>
                    <option value="aksesuar">Aksesuarlar</option>
                    <option value="audio">Audio</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Qiymət:</label>
                <select id="priceFilter">
                    <option value="all">Hamısı</option>
                    <option value="0-500">0 - 500 ₼</option>
                    <option value="500-1000">500 - 1000 ₼</option>
                    <option value="1000-2000">1000 - 2000 ₼</option>
                    <option value="2000+">2000 ₼+</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Sıralama:</label>
                <select id="sortFilter">
                    <option value="default">Standart</option>
                    <option value="price-asc">Qiymət: Aşağıdan yuxarı</option>
                    <option value="price-desc">Qiymət: Yuxarıdan aşağı</option>
                    <option value="name">Ad: A-Z</option>
                </select>
            </div>
        </div>
    </div>
</section>

